{
  "name": "---project-name---",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && node_modules/.bin/tsc",
    "build-watch": "npm run clean && mkdir -p ./dist/src && cp ./.env ./dist/.env && node_modules/.bin/tsc -w",
    "start-watch": "./node_modules/.bin/nodemon --inspect=2001 dist/main.js",
    "prepare": "rm -rf ./dist",
    "postbuild": "cp ./package.json ./dist/package.json && cp ./ormconfig.js ./dist/ormconfig.js",
    "start": "node main.js",
    "db-migration-generate": "./node_modules/.bin/typeorm migration:generate -n Change",
    "db-migrate": "./node_modules/.bin/typeorm migration:run",
    "db-rollback": "./node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "@node-cool/core": "^1.0.11",
    "@node-cool/database": "^1.0.4",
    "@node-cool/authentication": "^1.0.12",
    "dotenv": "^8.2.0",
    "pg": "7.11.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "2.1.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md,json}": "prettier --write"
  }
}

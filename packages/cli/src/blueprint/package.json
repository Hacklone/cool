{
  "name": "---project-name---",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "build-watch": "npm run build -- --watch",
    "prepare": "rm -rf ./dist",
    "postbuild": "cp ./package.json ./dist/package.json && cp ./ormconfig.js ./dist/ormconfig.js",
    "start": "node main.js"
  },
  "dependencies": {
    "@node-cool/core": "^1.0.0",
    "@node-cool/database": "^1.0.0",
    "pg": "7.11.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "typescript": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.3.0",
    "eslint-config-prettier": "^6.11.0",
    "lint-staged": "^10.3.0",
    "prettier": "2.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md,json}": "prettier --write"
  }
}
